<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="TornTop.MVVM.View.DashboardBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TornTop.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TornTop.MVVM.ViewModel"
    x:Name="Root"
    mc:Ignorable="d">

    <Border
        Width="auto"
        Height="120"
        Padding="8"
        Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}"
        CornerRadius="6">
        <StackPanel
            Margin="16"
            VerticalAlignment="Center"
            Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <SymbolIcon Symbol="{x:Bind Icon, Mode=OneWay}" />
                <TextBlock Text="{x:Bind Label, Mode=OneWay}" />
            </StackPanel>

            <TextBlock>
                <Run Text="{x:Bind Value, Mode=OneWay}" />
                <Run Text=" / " />
                <Run Text="{x:Bind Maximum, Mode=OneWay}" />
            </TextBlock>

            <ProgressBar
                Foreground="{x:Bind BarColor, Mode=OneWay}"
                Maximum="{x:Bind Maximum, Mode=OneWay}"
                Value="{x:Bind Value, Mode=OneWay}">
                <ProgressBar.RenderTransform>
                    <ScaleTransform ScaleY="1.5" />
                </ProgressBar.RenderTransform>
            </ProgressBar>
        </StackPanel>
    </Border>
</UserControl>