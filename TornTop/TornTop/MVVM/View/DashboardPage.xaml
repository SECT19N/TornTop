<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TornTop.MVVM.View.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TornTop.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TornTop.MVVM.ViewModel"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:DashboardPageViewModel />
    </Page.DataContext>

    <ScrollView VerticalScrollBarVisibility="Visible">
        <StackPanel Spacing="8">
            <Grid
                Height="120"
                Padding="8"
                Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}"
                ColumnSpacing="12"
                CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="128" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <PersonPicture
                    Width="86"
                    Height="86"
                    HorizontalAlignment="Center"
                    DisplayName="SECT19N" />

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="SECT19N" />
                        <TextBlock VerticalAlignment="Center" Text="[123456]" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Level 69" />
                        <TextBlock Text="â€¢" />
                        <TextBlock Text="Idolized Trader" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Text="The Dark Horse" />
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Padding="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse
                            Width="8"
                            Height="8"
                            Fill="AliceBlue" />
                        <TextBlock VerticalAlignment="Center" Text="[123456]" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Level 69:" />
                        <TextBlock Text="Idolized Trader" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <MenuFlyoutSeparator />

            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <local:DashboardBarControl
                    BarColor="#69a829"
                    Icon="PostUpdate"
                    Label="Energy"
                    Maximum="100"
                    Value="75" />
                <local:DashboardBarControl
                    Grid.Column="1"
                    BarColor="#c66231"
                    Icon="Library"
                    Label="Nerve"
                    Maximum="85"
                    Value="15" />
                <local:DashboardBarControl
                    Grid.Column="2"
                    BarColor="#cac732"
                    Icon="ReShare"
                    Label="Happy"
                    Maximum="2600"
                    Value="2500" />
                <local:DashboardBarControl
                    Grid.Column="3"
                    BarColor="#6b83d9"
                    Icon="OtherUser"
                    Label="Life"
                    Maximum="3975"
                    Value="1235" />
            </Grid>
        </StackPanel>
    </ScrollView>
</Page>
