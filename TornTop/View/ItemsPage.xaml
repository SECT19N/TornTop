<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TornTop.View.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:TornTop.Model.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TornTop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource LayerOnMicaBaseAltFillColorTransparent}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <Converters:MoneyValueConverter x:Key="MoneyValueConverter" />
        <Converters:NumberValueConverter x:Key="NumberValueConverter" />
    </Page.Resources>

    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox
            x:Name="SearchItemTextBox"
            Margin="15,0"
            VerticalAlignment="Center"
            PlaceholderText="Search..."
            TextChanged="SearchItemTextBox_TextChanged" />

        <ListView
            x:Name="ItemsListView"
            Grid.Row="1"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Expander
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Expanding="Expander_Expanding">
                        <Expander.Header>
                            <Grid Padding="0,10" ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="64" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <ImageIcon Source="{Binding Image}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        EffectiveViewportChanged="TextBlock_EffectiveViewportChanged"
                                        Tag="{Binding Name}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding MarketValue, Converter={StaticResource MoneyValueConverter}, ConverterParameter='Market Value:'}" />
                                    <TextBlock Text="{Binding Circulation, Converter={StaticResource NumberValueConverter}, ConverterParameter='Circulation:'}" />
                                </StackPanel>

                                <Button
                                    x:Name="OpenItemPageButton"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Click="OpenItemPageButton_Click"
                                    Tag="{Binding Name}">
                                    <FontIcon FontFamily="/Assets/Fonts/remixicon.ttf#RemixIcon" Glyph="&#xF11A;" />
                                </Button>
                            </Grid>
                        </Expander.Header>

                        <Grid RowSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <ListView
                                x:Name="BazaarPrices"
                                HorizontalAlignment="Center"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="2">
                                            <TextBlock Text="{Binding Quantity, Converter={StaticResource NumberValueConverter}}" />
                                            <FontIcon
                                                FontFamily="/Assets/Fonts/remixicon.ttf#RemixIcon"
                                                FontSize="12"
                                                Glyph="&#xEA81;" />
                                            <TextBlock Text="{Binding Cost, Converter={StaticResource MoneyValueConverter}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <ListView
                                x:Name="MarketPrices"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="2">
                                            <TextBlock Text="{Binding Quantity, Converter={StaticResource NumberValueConverter}}" />
                                            <FontIcon
                                                FontFamily="/Assets/Fonts/remixicon.ttf#RemixIcon"
                                                FontSize="12"
                                                Glyph="&#xEA81;" />
                                            <TextBlock Text="{Binding Cost, Converter={StaticResource MoneyValueConverter}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>